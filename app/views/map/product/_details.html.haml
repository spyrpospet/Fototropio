%div{class: "flex flex-col"}
  %h1{class: "text-4xl font-bold text-black"}= product.title
  %div{class: "details flex flex-col pt-3"}
    %div{class: "flex flex-row items-center gap-x-3"}
      %div{class: "font-bold text-xl"} #{t(".code")}:
      %div{class: "text-gray-400"}= product.code
    %div{class: "flex flex-row items-center gap-x-3"}
      %div{class: "font-bold text-xl"} #{t("availability")}:
      %div{class: "text-gray-400"}= product.availability.title
    %div
  -# = render partial: "map/product/details/price", locals: {product: product}
  %div{class: "short-description"}= product.description&.html_safe
  = link_to t("express_interest"), map_url("epikoinwnia"), class: "mt-4 p-3 bg-black text-white rounded-full text-center transition-colors duration-200 border border-black md:w-1/2 hover:bg-white hover:text-black"
