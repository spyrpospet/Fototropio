%div{class: "md:w-1/2"}
  = simple_form_for :contact, url: contact_send_url, html: { class: "flex flex-col", method: :post } do |f|
    %div{class: "flex flex-col gap-y-3 py-2"}
      %div{class: "flex flex-col gap-y-3"}
        %div= t("email")
        %input{type: "text", name: "contact[email]", class: "border w-full p-1", value: ""}
        %div{id: "contact-email-error", class: "error"}
      %div{class: "flex flex-col gap-y-3"}
        %div= t("subject")
        %input{type: "text", name: "contact[subject]", class: "border w-full p-1", value: ""}
        %div{id: "contact-subject-error", class: "error"}
      %div{class: "flex flex-col gap-y-3"}
        %div= t("message")
        %textarea{type: "text", name: "contact[message]", class: "border w-full p-1", value: ""}
        %div{id: "contact-subject-error", class: "error"}
      %div{class: "flex flex-row justify-start"}
        = f.button :submit, t("send"), class: "bg-black text-white p-2 rounded-xl", label: false, wrapper: false