= content_for :body do
  %div{class: "flex flex-col gap-y-6 xl:w-10/12 w-11/12 py-6 mx-auto"}
    %div{class: "flex flex-col py-12 gap-y-3"}
      %h1{class: "text-5xl font-bold text-center"}= t("contact_us")
    %div{class: "flex flex-row gap-x-12 md:flex-row md:justify-between"}
      -# = render partial: 'map/contact/contact_form'
      %div{class: "flex flex-col gap-y-6 md:w-1/2"}
        - if @settings.address.present?
          %div{class: "flex flex-row gap-3 items-center"}
            %div
              %svg.w-8.h-8{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
