          %div{class: "flex flex-row gap-3 items-center"}
            %div
              %svg.w-8.h-8{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
