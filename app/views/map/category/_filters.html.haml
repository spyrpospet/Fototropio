%div{id: "filters-top"}
%div
  = simple_form_for :filters, url: "", method: :get, html:{"data-turbo-frame": "category-products", "data-filters-target": "form"} do |f|
    %div{class: "flex flex-col gap-y-12", id: "category-filters"}
      - if @products&.facets_distribution.present?
        - @products.facets_distribution.drop(1).each do |facet, values|
          = render partial: "/map/category/filters/item", locals: {facet: facet, values: values, f:f}
        = render partial: "/map/category/filters/price", locals: {min_price: @min_price, max_price: @max_price}