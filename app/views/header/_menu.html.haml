%div{class: "flex flex-grow", id: "main-menu", "data-controller": "menu"}
  %div{class: "flex flex-row gap-x-3 mt-6 items-center justify-around w-full text-xl"}
    - categories&.each do |category|
      %div{class: "static item py-2"}
        = link_to map_url(category.slug), class: "flex flex-row items-center gap-x-1" do
          %div= category.title
        - if category.children.published.present?
          %div{class: "sub overflow-y-auto lg:max-h-[50vh]"}
            %div{class: "mx-auto w-9/12 py-12"}
              %div{class: "flex flex-col gap-y-3"}
                %div{class: "flex flex-wrap gap-y-3"}
                  - category.children.published&.each do |child|
                    %div{class: "flex flex-col gap-3 lg:w-1/5"}
                      = link_to child.title, map_url([category.slug, child.slug]), class: "font-bold text-black text-xs uppercase"
    - pages&.each do |page|
      %div{class: "static item py-6"}
        = link_to page.title, map_url(page.slug), class: "flex flex-row items-center gap-x-1"