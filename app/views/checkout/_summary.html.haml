%div{class: "flex flex-col text-center bg-gray-100 border"}
  %div{class: "py-3 text-lg"}= t("total_order")
  %div{class: "flex flex-col gap-y-3 bg-white p-3"}
    %div{class: "flex flex-row gap-x-3 items-center"}
      %div{class: "w-1/2"}= t("transportation")
      %div{class: "w-1/2"} 0.00 €
    %div{class: "flex flex-row gap-x-3 items-center"}
      %div{class: "w-1/2 font-bold text-xl"} #{t("total_order")}
      %div{class: "w-1/2 font-bold text-red-500 text-xl"}= number_to_currency(@order.net_total, unit: "€")
%div{class: "flex flex-col pt-6"}
  %label{class: "flex flex-row gap-x-3 items-center justify-center"}
    %input{name: "checkout[terms_agreement]", value: true, type: "checkbox"}
    %div= t("i_agree_with_terms", terms_url: "/oroi-xrisis").html_safe
  %div{id: "checkout-terms-agreement-error", class: "error"}