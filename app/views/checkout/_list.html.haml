%div{class: "flex flex-row text-center bg-gray-100 py-3 border"}
  %div{class: "w-5/12 text-lg"}= t("title")
  %div{class: "w-3/12 text-lg"}= t("quantity")
  %div{class: "w-3/12 text-lg"}= t("total")
  %div{class: "w-1/12"}
%div{class: "flex flex-wrap items-center gap-y-3 text-center py-3"}
  - order.data["products"]&.each do |item|
    %div{class: "w-5/12"}= item["title_#{I18n.locale}"]
    %div{class: "w-3/12 justify-center flex flex-row items-center gap-x-3 quantity"}
      %input{value: item["quantity"], class: "w-12 border text-center"}
      %div{class: "cursor-pointer", "data-action": "click->checkout#change_quantity", "data-product-id": item["product_id"]}
        %svg.size-6{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M16.023 9.348h4.992v-.001M2.985 19.644v-4.992m0 0h4.992m-4.993 0 3.181 3.183a8.25 8.25 0 0 0 13.803-3.7M4.031 9.865a8.25 8.25 0 0 1 13.803-3.7l3.181 3.182m0-4.991v4.99", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
    %div{class: "w-3/12"}= number_to_currency(item["total"], unit: "€")
    %div{class: "justify-center w-1/12"}
      %div{class: "cursor-pointer", "data-action": "click->checkout#delete_item", "data-delete-id": item["delete_id"]}
        %svg.size-6{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
%div{class: "flex flex-row text-center bg-gray-100 py-3"}
  %div{class: "w-5/12"}
  %div{class: "w-3/12 flex justify-end"}#{t("subtotal")}
  %div{class: "w-3/12 flex justify-center"}= number_to_currency(order.gross_total, unit: "€")
  %div{class: "w-1/12"}