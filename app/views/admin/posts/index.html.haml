= content_for :body do
  %div{class: "flex flex-row items-center justify-between border-b pb-3 mb-6", id: "page-heading"}
    %h1{class: "text-2xl font-bold"}= t("pages")
    = link_to  new_admin_post_path, class: "common-text-color" do
      %svg.w-6.h-6{:fill => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
        %path{"clip-rule" => "evenodd", :d => "M12 2.25c-5.385 0-9.75 4.365-9.75 9.75s4.365 9.75 9.75 9.75 9.75-4.365 9.75-9.75S17.385 2.25 12 2.25ZM12.75 9a.75.75 0 0 0-1.5 0v2.25H9a.75.75 0 0 0 0 1.5h2.25V15a.75.75 0 0 0 1.5 0v-2.25H15a.75.75 0 0 0 0-1.5h-2.25V9Z", "fill-rule" => "evenodd"}
  %div{id: "post-filters"}
    = simple_form_for :search, url: "", method: :get, data: {turbo_frame: :search_body} do |s|
      %table{class: "table w-full"}
        %tbody
          %tr
            %td{class: "w-9/12"}= s.input :title, label: false, placeholder: t("search"), input_html: {value: (params[:search].present? ? params[:search][:title] : ""), class: "border border-gray-300 rounded-lg p-3 w-full"}, wrapper: false
            %td{class: "flex-shrink flex justify-center"}= s.submit t("search"), class: "bg-blue-500 text-white px-4 py-2 rounded-lg cursor-pointer"
    = render partial: "admin/posts/list"