= content_for :body do
  = simple_form_for [:admin, @option], html: { class: "flex flex-col" } do |f|
    %div{class: "flex flex-row items-center justify-between border-b pb-3 mb-6", id: "option-heading", "data-controller": "option"}
      %h1{class: "text-2xl font-bold"} #{action_name == "new" ? t("new_option") : t("edit_option")}
      %div{class: "flex flex-row items-center gap-x-3"}
        = link_to t("cancel"), admin_options_path, class: "btn btn-neutral"
        = f.submit t("save"), class: "btn btn-neutral"
    %div{class: "flex flex-col test"}
      %div{id: "page-errors"}
      %div{class: "tabs tabs-lifted", role: "tablist"}
        = render partial: 'details', locals: { f: f, locale: locale }