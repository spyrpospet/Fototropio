%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("images")}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "flex flex-col"}
    %div{class: "flex flex-row border-b border-t border-to py-6 my-6 justify-center"}
      = link_to "javascript:;", "data-action":"click->product#open_images_input", class: "btn btn-neutral" do
        %svg.w-6.h-6{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M12 4.5v15m7.5-7.5h-15", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
      = f.file_field :images, direct_upload: true, multiple: true, class: "hidden", "data-product-target": "imagesInput"
    %div{class: "flex flex-wrap gap-6", id: "product-images"}
      = render partial: "admin/products/images/image", collection: @product.images.order(position: :asc), as: :image