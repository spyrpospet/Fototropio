%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("tabs")}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "flex flex-col pb-6"}
    %div{class: "mx-auto text-center w-1/3"}
      = link_to add_new_tab_admin_products_path, class: "btn btn-neutral", data:{ turbo_method: :post } do
        %svg.w-6.h-6{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
          %path{:d => "M12 4.5v15m7.5-7.5h-15", "stroke-linecap" => "round", "stroke-linejoin" => "round"}%i{class: "icon icon-plus"}
    %div{class: "flex flex-col gap-y-6", id: "tabs-list"}
      = f.simple_fields_for :tabs do |t|
        = render partial: "admin/products/tab", locals: { t: t, dom_id: @dom_id}