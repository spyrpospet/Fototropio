%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("details"), checked: ""}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "tabs tabs-lifted", role: "tablist"}
    - I18n.available_locales.each do |locale|
      %input{class: "tab uppercase", name: "tab_details", type: "radio", role: "tab", "aria-label":locale, checked: locale == I18n.default_locale}
      %div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6 w-full", role: "tabpanel"}
        %div{class: "flex flex-col gap-y-2"}
          = f.label :title, t("title")
          = f.input "title_#{locale}", input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
        %div{class: "flex flex-col gap-y-2 mt-3"}
          = f.label :description, t("description")
          = f.rich_text_area  "description_#{locale}", input_html: { class: "border" }, wrapper: false, label: false
  %div{class: "flex flex-col gap-y-3"}
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :code
      = f.input :code, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :quantity
      = f.input :quantity, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :categories
      = f.association :categories, as: :select, collection: @categories, include_blank: false, multiple: true, input_html: { class: "select select-bordered w-full max-w-xs js-choice" }, wrapper:false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :brand
      = f.association :brand, as: :select, collection: @brands, input_html: { class: "select select-bordered w-full max-w-xs" }, wrapper:false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :availability
      = f.association :availability, as: :select, collection: @availabilities, include_blank: false, input_html: { class: "select select-bordered w-full max-w-xs" }, wrapper:false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :label
      = f.association :label, as: :select, collection: @labels, input_html: { class: "select select-bordered w-full max-w-xs" }, wrapper: false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :best_seller
      = f.check_box :best_seller, class: "toggle toggle-neutral"
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :new_arrival
      = f.check_box :new_arrival, class: "toggle toggle-neutral"
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :status
      = f.check_box :status, class: "toggle toggle-neutral"
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :sort_order
      = f.input :sort_order, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false