= turbo_frame_tag :search_body do
  %table{class: "table w-full"}
    %thead
      %tr{class: "text-center text-black text-base"}
        %th{class: "w-3/12"}= t("title")
        %th{class: "w-3/12"}= t("ancestry")
        %th{class: "w-3/12"}= t("status")
        %th{class: "flex-shrink"}= t("controls")
    %tbody
      - @categories.each do |category|
        %tr{class: "text-center"}
          %td{class: "w-4/12"}= category.title
          %td{class: "w-3/12"}
            - if category.has_parent?
              - category.ancestors.each do |ancestor|
                - if ancestor == category.ancestors.last
                  = ancestor.title
                - else
                  = ancestor.title + " > "
            - else
              = category.ancestry
          %td{class: "w-3/12"}
            - if category.status
              %span{class: "text-green-500"}= t("active")
            - else
              %span{class: "text-red-500"}= t("inactive")
          %td{class: "flex flex-row items-center justify-center text-center gap-x-3 flex-shrink"}
            = link_to edit_admin_category_path(category), "data-turbo": false, class: "common-text-color" do
              %svg.w-4.h-4{:fill => "currentColor", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
                %path{:d => "M21.731 2.269a2.625 2.625 0 0 0-3.712 0l-1.157 1.157 3.712 3.712 1.157-1.157a2.625 2.625 0 0 0 0-3.712ZM19.513 8.199l-3.712-3.712-8.4 8.4a5.25 5.25 0 0 0-1.32 2.214l-.8 2.685a.75.75 0 0 0 .933.933l2.685-.8a5.25 5.25 0 0 0 2.214-1.32l8.4-8.4Z"}
                %path{:d => "M5.25 5.25a3 3 0 0 0-3 3v10.5a3 3 0 0 0 3 3h10.5a3 3 0 0 0 3-3V13.5a.75.75 0 0 0-1.5 0v5.25a1.5 1.5 0 0 1-1.5 1.5H5.25a1.5 1.5 0 0 1-1.5-1.5V8.25a1.5 1.5 0 0 1 1.5-1.5h5.25a.75.75 0 0 0 0-1.5H5.25Z"}
            = link_to admin_category_path(category), data: {"turbo-method": "delete", "turbo-confirm": t("are_you_sure") }, class: "common-text-color" do
              %svg.w-4.h-4{:fill => "none", :stroke => "currentColor", "stroke-width" => "1.5", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
                %path{:d => "m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0", "stroke-linecap" => "round", "stroke-linejoin" => "round"}
  - if @pagy.pages > 1
    %div{class: "pagination sticky bottom-0"}= pagy_nav(@pagy).html_safe