%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("images")}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "flex flex gap-y-3 mt-10"}
    %div{class: "flex flex-col gap-y-3", "data-controller": "preview"}
      - if @category.image.present? && @category.image.variable?
        = image_tag(@category.image.variant(:admin), size: "320x390", "data-preview-target": "preview")
      - else
        = image_tag("https://placehold.co/320x390", size: "320x390", "data-preview-target": "preview")
      %div{class: "flex flex-row py-3 gap-x-3 border-t border-b justify-center"}
        %div #{t("dimensions")}:
        %div 320x390
      %div{class: "flex flex-row items-center"}
        = f.file_field :image, direct_upload: true, "data-preview-target": "source", "data-action": "change->preview#update"
        - if @category.image.present?
          %button{class: "btn", type: "button", "data-action": "click->preview#remove", "data-id": @category.image.id}= t("delete")