%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("images")}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "flex justify-center"}
    %div{class: "flex flex-col gap-y-3", "data-controller": "preview"}
      - if @banner.image.present? && @banner.image.variable?
        = image_tag(@banner.image.variant(:admin), size: "300x300", "data-preview-target": "preview")
      - else
        = image_tag("https://placehold.co/300x300", size: "300x300", "data-preview-target": "preview")
      = f.file_field :image, direct_upload: true, "data-preview-target": "source", "data-action": "change->preview#update"