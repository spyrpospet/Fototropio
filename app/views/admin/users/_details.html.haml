%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("details"), checked: ""}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "tabs tabs-lifted", role: "tablist"}
    %div{class: "flex flex-col gap-y-4 mt-4"}
      %div{class: "flex flex-col gap-y-2"}
        = f.label :first_name, t("first_name")
        = f.input :first_name, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
      %div{class: "flex flex-col gap-y-2"}
        = f.label :last_name, t("last_name")
        = f.input :last_name, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
      %div{class: "flex flex-col gap-y-2"}
        = f.label :email, t("email")
        = f.input :email, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
      %div{class: "flex flex-col gap-y-2"}
        = f.label :description, t("description")
        = f.rich_text_area :description, input_html: { class: "border" }, wrapper: false, label: false