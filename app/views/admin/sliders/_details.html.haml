%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("details"), checked: ""}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "tabs tabs-lifted", role: "tablist"}
    %div{class: "flex justify-center"}
      %div{class: "flex flex-col gap-y-3", "data-controller": "preview"}
        - if @slider.image.present? && @slider.image.variable?
          = image_tag(@slider.image.variant(:large), size: "1920x1024", "data-preview-target": "preview")
        - else
          = image_tag("https://placehold.co/1920x1024", size: "1920x1024", "data-preview-target": "preview")
        = f.file_field :image, direct_upload: true, "data-preview-target": "source", "data-action": "change->preview#update"
        %div{class: "flex flex-row py-3 gap-x-3 border-t border-b justify-center"}
          %div #{t("dimensions")}:
          %div 1920x880
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :url
      = f.input :url, input_html: { class: "input input-bordered w-full" }, wrapper: false, label: false
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :alt_title
      = f.input :alt_title, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
  %div{class: "flex flex-col gap-y-6"}
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :status, t("status")
      = f.check_box :status, class: "toggle toggle-neutral"
    %div{class: "flex flex-col gap-y-2 mt-3"}
      = f.label :sort_order, t("sort_order")
      = f.input :sort_order, input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false