%input{class: "tab", name: "tab_locale", type: "radio", role: "tab", "aria-label":t("metas")}
%div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6", role: "tabpanel"}
  %div{class: "tabs tabs-lifted", role: "tablist"}
    - I18n.available_locales.each do |locale|
      %input{class: "tab uppercase", name: "tab_metas", type: "radio", role: "tab", "aria-label":locale, checked: locale == I18n.default_locale}
      %div{class:"tab-content bg-base-100 border-base-300 rounded-box p-6 w-full", role: "tabpanel"}
        %div{class: "flex flex-col"}
          = f.label :meta_title, t("meta_title")
          = f.input "meta_title_#{locale}", input_html: { class: "input input-bordered w-full max-w-xs" }, wrapper: false, label: false
        %div{class: "flex flex-col gap-y-2 mt-3"}
          = f.label :meta_description, t("description")
          = f.input "meta_description_#{locale}", as: :text,  input_html: { class: "textarea textarea-bordered"}, wrapper: false, label: false