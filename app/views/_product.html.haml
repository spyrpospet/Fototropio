- url = (@slugs.present? ? (@slugs&.join("/") + "/" + product.slug) : [product.first_category.slug, product.slug])
%div{class: "item relative"}
  %div{class: "flex flex-col"}
    = link_to map_url(url), class: "image overflow-hidden", "data-turbo": false do
      - if product.main_image.present? && product.main_image.variable?
        = image_tag(product.main_image.variant(:category), class: "object-cover w-full hover:scale-125 transition ease-in-out duration-500")
      - else
        = image_tag("https://placehold.co/350x350", class: "object-cover w-full hover:scale-125 transition ease-in-out duration-500")
    - if product.label.present?
      %div{class: "absolute text-sm top-4 right-4 text-white bg-[#333333] border px-3 py-1"}= product.label.title
    %div{class: "details flex flex-col"}
      %div{class: "details flex flex-col gap-y-2 py-3 text-center"}
        %div{class: "font-bold text-base text-wrap"} ##{product.code}
        %div{class: "font-bold text-base text-wrap"}= product.title
        %div{class: "flex justify-center"}
          = link_to "Περισσότερα", map_url(url), class: "mt-3 px-4 py-2 bg-black text-white hover:bg-white hover:text-black border border-black transition rounded-full md:w-1/2 duration-300", "data-turbo": false