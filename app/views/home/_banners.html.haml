- if banners.present?
  %div{class: "flex flex-col mx-auto w-11/12 2xl:w-8/12 mt-10", id: "home-banners"}
    %div{class: "grid grid-cols-1 gap-6 md:grid-cols-2"}
      - banners.each do |banner|
        %div{class: "flex flex-col w-full"}
          %div{class: "flex flex-col items-center justify-center overflow-hidden"}
            - if banner.image.present?
              = image_tag(banner.image.variant(:home), size: "650x660", class: "hover:scale-125 transition ease-in-out duration-300", "data-preview-target": "preview")
            - else
              = image_tag("https://placehold.co/650x660", size: "650x660", class: "hover:scale-125 transition ease-in-out duration-300", "data-preview-target": "preview")
          %div{class: "details py-3 flex flex-col gap-y-3 justify-center text-center lg:text-left"}
            %div{class: "text-2xl"}= banner.sub_title
            %div{class: "text-4xl"}= banner.title
            %div{class: "flex justify-center mt-3 lg:justify-start"}
              = link_to t("see_category"), banner.url || "", class: "border border-gray-800 text-lg px-3 py-4"