- if banner.present?
  %div{class: "flex flex-col mx-auto py-12 w-11/12 2xl:w-8/12", id: "best-sellers"}
    %div{class: "flex flex-col gap-6 lg:flex-row"}
      %div{class: "lg:w-1/2"}
        = link_to banner.url do
          %div{class:"relative overflow-hidden"}
            - if banner.image.present?
              = image_tag(banner.image.variant(:home_best_seller), size: "650x450", class: "w-full hover:scale-125 transition ease-in-out duration-300")
            - else
              = image_tag("https://placehold.co/650x450", size: "650x450", class: "w-full hover:scale-125 transition ease-in-out duration-300")
      %div{class: "lg:w-1/2"}
        %div{class: "grid grid-cols-2 gap-x-3"}
          - products.take(2).each do |product|
            = render partial: "home/best_sellers/product", locals: { product: product }
    %div{class: "grid grid-cols-2 lg:grid-cols-4 gap-x-3"}
      - products.drop(2).each do |product|
        = render partial: "home/best_sellers/product", locals: { product: product }