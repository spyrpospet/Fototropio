- if brands.present?
  %div{class: "flex flex-col pb-24 bt-6 mx-auto w-11/12 2xl:w-8/12", id: "home_brands", "data-controller": "brands"}
    %div{class: "glide", "data-brands-target": "brandsList"}
      %div{class: "glide__track", "data-glide-el": "track"}
        %ul{class: "glide__slides"}
          = render partial: "home/brands/brand", collection: brands, cache: true
      %div{class: "glide__arrows", "data-glide-el": "controls"}
        %button{class: "glide__arrow glide__arrow--left home-brand-slider-arrow left", "data-glide-dir": "<"} <
        %button{class: "glide__arrow glide__arrow--right home-brand-slider-arrow right", "data-glide-dir": ">"} >