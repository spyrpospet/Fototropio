%div{class: "fixed top-0 left-0 bottom-0 right-0 bg-white z-50 hidden overflow-y-auto", id: "product-search", "data-controller": "search" , "data-search-target": "container"}
  %div{class: "w-full pt-6 flex flex-row justify-center md:px-6 md:justify-end"}
    %div{class: "w-10 lg:w-14 cursor-pointer", "data-action":"click->search#close"}
      %svg{:classname => "w-3 h-6", :fill => "none", :stroke => "currentColor", :strokewidth => "{1.5}", :viewbox => "0 0 24 24", :xmlns => "http://www.w3.org/2000/svg"}
        %path{:d => "M6 18L18 6M6 6l12 12", :strokelinecap => "round", :strokelinejoin => "round"}
  %div{class:"flex flex-col gap-y-6"}
    %div{class: "flex flex-row justify-center"}
      = link_to root_path do
        - if @settings.logo.present? && @settings.logo.variable?
          = image_tag(@settings.logo.variant(:logo), size: "241x52")
        - else
          = image_tag("https://placehold.co/241x52", size: "241x52")
    %div{class: "border-b-2 border-black mx-auto w-11/12 lg:w-9/12"}
      = simple_form_for :search, url: search_path, method: :post, html: {"data-search-target": "form", class: "mb-0"} do |f|
        %div{class: "flex flex-row justify-start"}
          = f.input :query, label: false, wrapper:false, placeholder: t("search"),  input_html: {class: "w-full p-3 search text-xl", "data-action": "input->search#formSubmit",}
    %div{class: "grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 mx-auto w-11/12 xl:w-9/12 gap-6", id: "search-results", "data-search-target": "results"}